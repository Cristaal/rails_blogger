
<h2><%= @post.title %></h2>
</br>
<%= @post.body %>
</br>
<%= link_to "Add a Comment", new_comment_path(post_id: "#{@post.id}") %>


<p>Comments: </p>

<% @post.comments.each do |comment| %>
  <li>
    Comment: <%= comment.body %>
  </br>
    By:  <%= comment.user.email %>
  </li>
    <% if comment.user==current_user %>
      <%= link_to "Edit Comment", edit_comment_path(comment) %>
    </br>
      <%= link_to "Delete Comment", comment_path(comment.id), class: "btn btn-xs btn-danger",
      data: {confirm: "Are you sure you want to delete your comment?",
        method: "delete"} %>
    <% end %>
<% end %>
