<h1>New User</h1>

<% if @user.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @user do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit %>

<% end %>


<p><%= link_to "Return to Users", users_path %></p>
