<%= render "layouts/errors", object: @comment %>

<%= form_for @comment do |f| %>
  <%= f.label :body %>
  <%= f.text_field :body, class: 'form-control', required: true, autofocus: true %>
  <%= f.hidden_field :post_id, value: @comment.post_id %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <br>
  <%= f.submit class: 'btn btn-success', method: "update" %>
<% end %>
