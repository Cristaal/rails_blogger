<h1>New Blogger</h1>

<% if @blogger.errors.any? %>
  <h3>Oops there were some errors. Please try again:</h3>
  <ul>
    <% @blogger.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.submit %>

<% end %>


<p><%= link_to "Return to Bloggers", bloggers_path %></p>
